{
  // Make .env files visible in VSCode Explorer
  "files.exclude": {
    // Explicitly show .env file at root level (override any defaults)
    ".env": false,
    ".env.*": false,
    "**/.env": false,
    "**/.env.*": false
  },

  // Show .env files in search results
  "search.exclude": {
    "**/node_modules": true,
    "**/dist": true,
    "**/.git": true,
    "**/.yalc": true
  },

  // Syntax highlighting for .env files
  "files.associations": {
    "*.env": "dotenv",
    ".env": "dotenv",
    ".env.*": "dotenv"
  },

  // Editor settings for .env files
  "[dotenv]": {
    "editor.formatOnSave": false,
    "editor.insertSpaces": true,
    "editor.tabSize": 2
  },

  // Security: Show a warning icon for .env files
  "workbench.colorCustomizations": {
    "editorWarning.foreground": "#ffa500"
  }
}
